<h2>Add Song</h2>
<div class="row">
    <form action="/songs" method="POST" class="col s12" enctype="multipart/form-data">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title">
                <label for="title">Song Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="composer" name="composer">
                <label for="composer">Composer</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <h6>Lyrics:</h6>
                <textarea id="lyrics" name="lyrics"></textarea>
            </div>
        </div>
    

        <div class="row">
            <h5>Meta-Data</h5>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="genre" name="genre">
                <label for="genre">Genre</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="mood" name="mood">
                <label for="mood">Mood</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="theme" name="theme">
                <label for="theme">Theme</label>
            </div>
        </div>
    
        <div class="row">
            <h5>Rights</h5>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="affiliation" name="affiliation">
                <label for="affiliation">Affiliation</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="registered" name="registered">
                <label for="registered">Registered?</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="workNum" name="workNum">
                <label for="workNum">Works #</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="iswc" name="iswc">
                <label for="iswc">ISWC Number</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="ipi" name="ipi">
                <label for="ipi">IPI/CAE Number</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="shares" name="shares">
                <label for="shares">Shares</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="coWriter" name="coWriter">
                <label for="coWriter">Co-Writer</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="coWriterIpi" name="coWriterIpi">
                <label for="coWriterIpi">Co-Writer IPI #</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="writerSplit" name="writerSplit">
                <label for="writerSplit">Writer Split</label>
            </div>
        </div>

        <div class="row">
            <h5>Publishing</h5>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="publisher" name="publisher">
                <label for="publisher">Publisher</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="pubAffiliation" name="pubAffiliation">
                <label for="pubAffiliation">Publisher Affiliation</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="pubShares" name="pubShares">
                <label for="pubShares">Publisher Shares</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="pubIpi" name="pubIpi">
                <label for="pubIpi">Publisher IPI #</label>
            </div>
        </div>

    <div class="row">
        <h5>Media</h5>
    </div>
        <div class="row">
            <div class="input-field">
                <h6>Audio</h6>
                <input type="file" class="form-control" id="songFile" name="file">
                <label for="audioUpload" class="form-label"></label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="songFileName" name="songFileName">
                <label for="songFileName">Audio File Name</label>
            </div>
        </div>
    

